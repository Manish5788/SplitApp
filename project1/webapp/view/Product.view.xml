<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    controllerName="project1.controller.Product"
    displayBlock="true"
>
    <Page
        id="page"
        title="Product Detail Page"
        showNavButton="true"
        navButtonPress="onNavBack"
        navButtonTooltip="Simon Go Back"
    >
    	<Panel id="_IDGenPanel1" expandable="true" headerText="Product Details" width="auto" class="sapUiResponsiveMargin">
		
        <content>
            <VBox
                id="_IDGenVBox1"
                class="sapUiSmallMargin"
            >
                <f:SimpleForm
                    id="SimpleFormDisplay354wide"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    title="Product Details"
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <Label
                            id="_IDGenLabel1"
                            text="Product ID"
                        />
                        <Text
                            id="nameText"
                            text="{myModel>productId}"
                        />
                        <Label
                            id="_IDGenLabel2"
                            text="Product Name "
                        />
                        <Text
                            id="_IDGenText1"
                            text="{myModel>productName}"
                        />
                        <Label
                            id="_IDGenLabel3"
                            text="Product Quantity"
                        />
                        <Text
                            id="_IDGenText2"
                            text="{myModel>productQuantity}"
                        />
                        <Label
                            id="_IDGenLabel4"
                            text="Product Price"
                        />
                        <Text
                            id="countryText"
                            text="{myModel>productPrice}"
                        />
                           <Label
                            id="_IDGenLabel5"
                            text="Product Image"
                        />
                	<Link id="_IDGenLink1" text="Image Url" href="{myModel>productImage}" target="_blank" />
        
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
	</Panel>

    	<Panel id="expandablePanel" expandable="true" width="auto" class="sapUiResponsiveMargin">
		<headerToolbar>
			<OverflowToolbar id="_IDGenOverflowToolbar1" active="true" press="onOverflowToolbarPress">
				<Title id="_IDGenTitle1" text="Product Image" />
				<ToolbarSpacer id="_IDGenToolbarSpacer1" />
				<Button id="_IDGenButton1" icon="sap-icon://settings" />
				<Button id="_IDGenButton2" icon="sap-icon://drop-down-list" />
			</OverflowToolbar>
		</headerToolbar>
		<content>
			<Text id="_IDGenText3" text="Product Image :" class="sapUiSmallMarginBottom" />
			<Image id="_IDGenImage1" src="{/images/1.jpg}" height="10px" width="10px"/>
		</content>
	</Panel>
    </Page>
</mvc:View>
