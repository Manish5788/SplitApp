<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    controllerName="project1.controller.Product"
    displayBlock="true"
>
    <Page
        id="page"
        title="Product Detail Page"
        showNavButton="false"
        navButtonPress="onNavBack"
        navButtonTooltip="Simon Go Back"
    >
        <content>
            <VBox
                id="_IDGenVBox1"
                class="sapUiSmallMargin"
            >
                <f:SimpleForm
                    id="SimpleFormDisplay354wide"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    title="Product Details"
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <Label
                            id="_IDGenLabel1"
                            text="Product ID"
                        />
                        <Text
                            id="nameText"
                            text="{productId}"
                        />
                        <Label
                            id="_IDGenLabel2"
                            text="Product Name "
                        />
                        <Text
                            id="_IDGenText1"
                            text="{productName}"
                        />
                        <Label
                            id="_IDGenLabel3"
                            text="Product Quantity"
                        />
                        <Text
                            id="_IDGenText2"
                            text="{productQuantity}"
                        />
                        <Label
                            id="_IDGenLabel4"
                            text="Product Price"
                        />
                        <Text
                            id="countryText"
                            text="{productPrice}"
                        />
                           <Label
                            id="_IDGenLabel5"
                            text="Product Image"
                        />
                        <ImageContent id="img1" src="{productImage}"></ImageContent>
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>

    </Page>
</mvc:View>
